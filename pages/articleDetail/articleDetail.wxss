/* pages/articleDetail/articleDetail.wxss */

.container{
    margin-top: 20rpx;
}
.title-container text{
    font-size: 48rpx;
    margin-left: 20rpx;
}
.authorAndDate text{
    font-size: 28rpx;
    color: #666;
    margin-right: 20rpx;
    margin-left: 20rpx;
}
.authorAndDate{
    margin-top: 20rpx;
}
.authorAndDate text:first-of-type{
    color: #576b95;
}
.content-container{
    margin-top: 30rpx;
    text-indent: 2em;
    padding: 20rpx;
}
.content-container text{
    font-size: 16px;
    line-height: 32px;
    
}
.read-container{
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    margin-left: 20rpx;
}
.read-container text{
    font-size: 14px;
    margin-right: 20rpx;
}
.banner{
    width: 750rpx;
    height: 500rpx;
}
.banner image{
    width: 100%;
    height: 100%;
}


.media-container{
    display: flex;
    justify-content: center;
}

video{
    width: 700rpx;
    height: 500rpx;
}
.controls{
    position: relative;
    width: 700rpx;
    height: 500rpx;
    background-color: red;
}
.controls-box{
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100rpx;
    height: 100rpx;
    background-color: gray;
    border-radius:50%;
    margin-top: -50rpx;
    margin-left: -50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.controls-box cover-image{
    width: 30rpx;
    height: 30rpx;
    margin-top: 20rpx;
}
.controls-box cover-view{
    font-size: 24rpx;
    color: #fff;
}

.audio-container{
    display: flex;
    align-items: center;
    padding: 30rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    background-color: #fff;
    border: 1px solid #f2f2f2;
}
.audio-controller{
    margin-right: 40rpx;
}
.audio-controller image{
    width: 80rpx;
    height: 80rpx;
}
.audio-title text{
    font-size: 28rpx;
    color: #666;
}
.audio-progress{
    position: relative;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    /* width: 520rpx; */
}
.progress-circle{
    position: absolute;
    top: 50%;
    margin-top: -10rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #00b26a;
}
.audio-time{
    display: flex;
    justify-content: space-between;
}
.audio-time text{
    color: #666;
    font-size: 24rpx;
}
